rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Companies collection rules
    match /companies/{companyId} {
      allow read: if true;  // Anyone can read company info
      allow write: if isAdmin();  // Only admins can modify
      
      // Nested collections within companies
      match /employees/{employeeId} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      match /jobs/{jobId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Employees collection rules
    match /employees/{employeeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Jobs collection rules
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Candidates collection rules
    match /candidates/{candidateId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
